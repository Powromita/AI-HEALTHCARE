{
  "name": "ai-healthcare",
  "version": "1.0.0",
  "description": "AI Healthcare Management System with Emotion Assessment",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "heroku-postbuild": "npm run install-client && npm run build",
    "seed": "node scripts/seedEmotionData.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "keywords": [
    "healthcare",
    "ai",
    "mern",
    "react",
    "mongodb",
    "express",
    "emotion-assessment",
    "ml",
    "recommendation-system"
  ],
  "author": "AI Healthcare Team",
  "license": "MIT"
}
